A.
for迴圈

int main(void)
{
   int i,sum=4;
   for(i=1;i<=401;i++)			
      sum+=i;
   printf("1+5+9+...+401=%d\n",sum);	
   
   system("pause");
   return 0;
}

1+5+9+...+401=80605

while迴圈

int main(void)
{
   int i=1,sum=4;
   while(i<=401)
   {		   			
     sum+=i;
     printf("1+5+9+...+401=%d\n",sum);
     i++;
    }
   system("pause");
   return 0;
}

1+5+9+...+401=5
1+5+9+...+401=7
1+5+9+...+401=10
.
.
.
1+5+9+...+401=80605

dowhile迴圈

int main(void)
{
   int i=1,sum=4;
   do
   sum+=i++;
   while(i<=401);
   			
     printf("1+5+9+...+401=%d\n",sum);
          
   system("pause");
   return 0;
}

1+5+9+...+401=80605

B.
for迴圈

double power_for(double, int);	
int main(void)
{
   double x;		
   int n;		

   printf("請輸入底數與次方:");	
   scanf("%lf,%d",&x,&n); 		
   printf("%lf的%d次方=%lf\n",x,n,power_for(x,n)); 

   system("pause");
   return 0;
}
double power_for(double base, int n)   
{
   int i;
   double pow=1.0;
   for(i=1;i<=n;i++)		
      pow=pow*base;
   return pow;
}

請輸入底數與次方:2,5
2.000000的5次方=32.000000

while迴圈

double power_while(double, int);	
int main(void)
{
   double x;		
   int n;		

   printf("請輸入底數與次方:");	
   scanf("%lf,%d",&x,&n); 		
   printf("%lf的%d次方=%lf\n",x,n,power_while(x,n)); 

   system("pause");
   return 0;
}
double power_while(double base, int n)   
{
   int i=1;
   double pow=1.0;
   while(i<=n)	
{
    pow=pow*base;
    i++;
}
   return pow;
}

請輸入底數與次方:2,5
2.000000的5次方=32.000000

dowhile迴圈

double power_dowhile(double, int);	
int main(void)
{
   double x;		
   int n;		

   printf("請輸入底數與次方:");	
   scanf("%lf,%d",&x,&n); 		
   printf("%lf的%d次方=%lf\n",x,n,power_dowhile(x,n)); 

   system("pause");
   return 0;
}
double power_dowhile(double base, int n)   
{
   int i=1;
   double pow=1.0;
   do
{  
   i++;  
   pow=pow*base;
} 
   while(i<=n); 
   return pow;
}

請輸入底數與次方:2,5
2.000000的5次方=32.000000

