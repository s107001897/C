遞迴(recursion)
int fac(int);     
int main(void)
{
   printf("fac(5)=%d\n", fac(5));   

   system("pause");
   return 0;
}

int fac(int n)	
{
   if(n>0)
      return (n*fac(n-1));
   else
      return 1;
}

fac(5)=120

D.
for迴圈

int fib(int);		
int main(void)
{
   int n;
   for(n=1;n<=10;n++)			
      printf("fib(%d)=%d\n",n,fib(n));		

   system("pause");
   return 0;
}

int fib(int n) 		
{	
   if(n==1 || n==2)	
      return 1;
   else			
      return (fib(n-1)+fib(n-2));
}

